package View;

import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

public class ButtonView extends JFrame {
	
	private JPanel panel;
	private JButton buttonA;
	private JButton buttonB;
	
	public ButtonView(String title) {
		
		setTitle(title);
		setSize(450, 200);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setResizable(false);
		setVisible(true);
		
		panel = new JPanel();
		panel.setLayout(null);
		getContentPane().add(panel);
		
		buttonA = new JButton();
		buttonB = new JButton();
		buttonA.setBounds(25, 25, 200, 150);
		buttonA.setText("A");
		buttonB.setBounds(230, 25, 200, 150);
		buttonB.setText("B");
		
		panel.add(buttonA);
		panel.add(buttonB);
		
		panel.revalidate();
		panel.repaint();
		
		buttonA.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				System.out.println("ButtonA pressed");
				buttonA.setForeground(Color.RED);
			}
		});
		buttonB.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				System.out.println("ButtonB pressed");
				buttonA.setForeground(Color.RED);
			}
		});
		
		
	}

}
